---
// MobileNav.astro

---

<nav class=" md:hidden lg:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 px-2 py-3">
  <div class="max-w-lg mx-auto">
    <ul class="flex items-center justify-between">
      <!-- Home -->
      <li>
        <a href="#home" class="flex flex-col items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-900" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          <span class="text-xs text-gray-900">Home</span>
        </a>
      </li>

      <!-- Search -->
      <li>
        <a href="#search" class="flex flex-col items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.3-4.3"/>
          </svg>
          <span class="text-xs text-gray-500">Search</span>
        </a>
      </li>

      <!-- Create -->
      <li>
        <a href="#create" class="flex flex-col items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="18" height="18" x="3" y="3" rx="2"/>
            <path d="M12 8v8"/>
            <path d="M8 12h8"/>
          </svg>
          <span class="text-xs text-gray-500">Create</span>
        </a>
      </li>

      <!-- Activity -->
      <li>
        <a href="#activity" class="flex flex-col items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
          </svg>
          <span class="text-xs text-gray-500">Activity</span>
        </a>
      </li>

      <!-- Profile -->
      <li>
        <a href="#profile" class="flex flex-col items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-500" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="8" r="5"/>
            <path d="M20 21a8 8 0 1 0-16 0"/>
          </svg>
          <span class="text-xs text-gray-500">Profile</span>
        </a>
      </li>
    </ul>
  </div>
</nav>

<style>
  /* Optional: Add safe area padding for iOS devices */
  @supports(padding: max(0px)) {
    nav {
      padding-bottom: max(0.75rem, env(safe-area-inset-bottom));
    }
  }
</style>