<article class="mt-10">
    <div class="relative max-w-[376px] bg-cover bg-no-repeat">
        <table class="table-auto border border-spacing-3">
            <thead class="py-8 px-10">
                <tr
                    class="border-b border-gray-200 [&>th:last-child]:text-sky-500"
                >
                    <th></th>
                    <th class="table-cell px-5 py-3">1</th>
                    <th class="table-cell px-5 py-3">2</th>
                    <th class="table-cell px-5 py-3">3</th>
                    <th class="table-cell px-5 py-3">4</th>
                    <th class="table-cell px-5 py-3">Final</th>
                </tr>
            </thead>
            <tbody>
                <tr class="font-semibold [&>td:nth-child(n+2)]:text-center">
                    <td class="table-cell px-4 py-4 font-semibold">Worriors</td>
                    <td>25</td>
                    <td>25</td>
                    <td>30</td>
                    <td></td>
                    <td>80</td>
                </tr>
                <tr class="font-semibold [&>td:nth-child(n+2)]:text-center">
                    <td class="table-cell px-4 py-4 font-semibold">Lakers</td>
                    <td>26</td>
                    <td>24</td>
                    <td>26</td>
                    <td></td>
                    <td>76</td>
                </tr>
            </tbody>
        </table>
        <button
            type="submit"
            class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-sky-400 bg-fixed opacity-0 transition duration-500 ease-in-out hover:opacity-95"
        >
        <span class="absolute bottom-3 right-3 text-sky-700 px-4 py-2 rounded-lg bg-white bg-opacity-100 font-semibold shadow-sky-900 shadow-md hover:text-sky-500">View Stats</span>
        </button>
    </div>
</article>